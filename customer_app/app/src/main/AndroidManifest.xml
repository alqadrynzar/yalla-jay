<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".YallaJayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YallaJayCustomerApp">

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />

        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" />

        <activity
            android:name=".StoreListActivity"
            android:label="@string/title_activity_store_list" />

        <activity
            android:name=".CategoryListActivity"
            android:label="@string/title_activity_category_list" />

        <activity
            android:name=".ProductListActivity"
            android:label="@string/title_activity_product_list" />

        <activity
            android:name=".CartActivity"
            android:label="@string/title_activity_cart" />

        <activity
            android:name=".AddressListActivity"
            android:label="عناويني" />

        <activity
            android:name=".SelectServiceRegionActivity"
            android:label="@string/title_activity_select_service_region" />

        <activity
            android:name=".OrderSuccessActivity"
            android:label="@string/title_activity_order_success" />

        <activity
            android:name=".AddEditAddressActivity"
            android:label="@string/title_activity_add_edit_address" />
        
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notifications" />

        <activity
            android:name=".OrderHistoryActivity"
            android:label="@string/title_activity_order_history" />
            
        <activity
            android:name=".OrderDetailActivity"
            android:label="@string/title_activity_order_detail" />

    </application>

</manifest>
